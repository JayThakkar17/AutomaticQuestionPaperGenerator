        </nav>
        <div class="container">
            <%	if (errorMessage) { %>
                <div class="alert alert-danger alert-dismissible"  style=" text-align: center;">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <%= errorMessage %>
                  </div>

            <% } else if(okMessage){%>
                <div class="alert alert-success alert-dismissible" style="width: 50%;text-align: center;;">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <%= okMessage %>
                                    </div>
                                <%}%>

            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8"><h2>Program <b>Details</b></h2></div>
                        </div>
                    </div>
                    <form action="updateProgram/<%= program._id%>" method="post">
                    <table>
                        <div class="wrap-input1 validate-input"  =  >
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Code  </b></h6></div></label></td>
                            <td><input disabled class="input1" type="text" value="<%= program._id%>" name="pcode" placeholder="Course code" required="required">
                                <span class="shadow-input1"></span></td>
                                 </div>
                        </tr>

                         <div class="wrap-input1 validate-input"  =  >
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Name  </b></h6></div></label></td>
                            <td><input class="input1" type="text" required value="<%= program.name%>" name="pname" placeholder="Course code" >
                                <span class="shadow-input1"></span></td>
                                 </div>
                        </tr>
                         <div class="wrap-input1 validate-input">
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Duration(inYears)  </b></h6></div></label></td>
                            <td><input class="input1" type="text"  required value="<%= program.duration%>" name="pduration" placeholder="Course code" >
                                <span class="shadow-input1"></span></td>
                                 </div>
                        </tr>
                         <div class="wrap-input1 validate-input" >
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Active  </b></h6></div></label></td>
                            <td><input class="input1" type="text" value="<%= program.active%>"name="pactive" required placeholder="Course code" >
                                <span class="shadow-input1"></span></td>
                                 </div>
                        </tr>
                         <div class="wrap-input1 validate-input"  >
