<%- include('partials/headerAdmin.ejs') %>
<style type="text/css">

    table{
        margin-left: 100px;
    }
    .row-1{
        display: flex;
        flex-direction: row;
    }
    .input1{
        width: 70%;
    }
    .col-sm-8{
        margin-top: 10px;
    }
    .contact1-form-btn{
        margin: 50px 10px;
    }
</style>
    <div class="app-content" style="padding-top: 40px;">
         <%	if (errorMessage) { %>
            <div class="alert alert-danger alert-dismissible"  style=" text-align: center;">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <%= errorMessage %>
              </div>

        <% } else if(okMessage){%>
            <div class="alert alert-success alert-dismissible" style="width: 50%;text-align: center;;">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <%= okMessage %>
                                </div>
        <%}%>
        <nav style="position: fixed;background-color: transparent;" class="navbar navbar-expand navbar-light bg-white">
            <button type="button" class="btn btn-sidebar" data-toggle="sidebar"><i class="icon-menu"></i></button>
        </nav>
        <nav aria-label="breadcrumb">
        </nav>
        <div class="container">
            <div class="table-wrapper">
                <div class="table-title">
                    <div class="row">
                        <div class="col-sm-8"><h2>Student <b>Details</b></h2></div>
                        </div>
                    </div>
                    <form action="/updateStudent/<%=program%>/<%= student._id%>" method="post">
                    <table>
                        <div class="wrap-input1 validate-input"  >
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Email/Id  </b></h6></div></label></td>
                            <td><input disabled class="input1" type="text" value="<%= student._id%>" name="fid" placeholder="Course code" required="required>
                                <span class="shadow-input1"></span></td>
                                 </div>
                        </tr>

                         <div class="wrap-input1 validate-input"  >
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Name  </b></h6></div></label></td>
                            <td><input class="input1" type="text" value="<%= student.name%>" name="sname" placeholder="Name" required>
                                 </div>
                        </tr>
                         <div class="wrap-input1 validate-input"  >
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Role </b></h6></div></label></td>
                            <td><input disabled class="input1" type="text" value="<%= student.role%>" name="frole" placeholder="Course code" required="required>
                                 </div>
                        </tr>
                         <div class="wrap-input1 validate-input"  >
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Batch  </b></h6></div></label></td>
                            <td><input class="input1" type="text" value="<%= batch %>"  name="sbatch" placeholder="Batch" required>
                                 </div>
                        </tr>
                          <div class="wrap-input1 validate-input"  >
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Program</b></h6></div></label></td>
                            <td><input class="input1" disabled  type="text" value="<%= program%>"  name="sprogram" placeholder="Program" required>
                                 </div>
                        </tr>
                          <div class="wrap-input1 validate-input"  >
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Active  </b></h6></div></label></td>
                            <td><input class="input1" type="text" value="<%= student.active%>"  name="sactive" placeholder="Active Status" required>
                                 </div>
                        </tr>
                         <div class="wrap-input1 validate-input"  >
                            <div class="row-1">
                        <tr>
                            <div class="row-1"></div>
                            <td><label for="code"><div class="col-sm-8"><h5><b>Reg_Date  </b></h6></div></label></td>
                            <td><input disabled class="input1" type="text" value="<%= student.reg_date%>" name="" placeholder="Course code" required="required>
                                <span class="shadow-input1"></span></td>
                            </div>
                        </tr>
                    </table>
                    <div class="container-contact1-form-btn">
						<button type="submit" class="contact1-form-btn" >
							<span>
								Update
								<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
							</span>
                        </button>
                       <a class="contact1-form-btn" href="/deleteDelete/<%=program%>/<%= student._id%>">
							<span>
								Delete
								<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
							</span>
                        </a>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>