<%- include('partials/headerAdmin.ejs') %>

<div align="center">
	<span class="contact1-form-title">
						Add Program
					</span>

					<% if (errorMessage) { %>
						<div class="alert alert-danger alert-dismissible" style="width: 50%;text-align: center;">
							<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
								<%= errorMessage %>
						  </div>
										 
					<% } else if(okMessage){%>
						<div class="alert alert-success alert-dismissible" style="width: 50%;text-align: center;">
							<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
								<%= okMessage %>
											</div>
										<%}%>

					<form class="contact1-form validate-form" align="left" action="addProgram" method="post">

						<div class="wrap-input1 `validate-input" >
						<input class="input1" type="text"name="pid" required placeholder="Program ID">
						<span class="shadow-input1"></span>
					</div>

					<div class="wrap-input1 validate-input"  >
						<input class="input1" type="text"  name="pname" required placeholder="Program Name">
						<span class="shadow-input1"></span>
					</div>
					<div class="wrap-input1 validate-input" >
						<input class="input1" type="text" name="duration" required placeholder="Duration in Years">
						<span class="shadow-input1"></span>
					</div>
					<tr><td colspan=2></td></tr>
					<tr>
					<td colspan=2>
					<div class="container-contact1-form-btn">
						<button type="submit" class="contact1-form-btn" onclick="addprogram">
							<span>
								ADD
								<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
							</span>
						</button>
					</div>
					</form>
				</div>
	</div></div></div>